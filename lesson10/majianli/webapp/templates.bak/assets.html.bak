				<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
					<h1 class="page-header">Dashboard</h1>
					<div>
						<center>
							<h1>请输入要执行的命令</h1>
							<textarea id="cmdText" style="width: 768px; height: 30px;"></textarea>
							<br />
							<button type="button" class="btn btn-primary" id="cmdBtn">提交</button>


						</center>
					</div>
					<hr />
					<div>
						<p ><pre id="content"></pre></p>   
					</div>
				</div>

				<script>
					$("#cmdBtn").click(function(){	
						var cmd = document.getElementById("cmdText").value;
						console.log(cmd);
						/* var url = "http://112.74.164.107:9000/api/v1/command?cmd=" + cmd;*/
						var url = "http://172.18.41.30:8000/api/v1/command?cmd=" + cmd;
						console.log(url);
						$.get(url, function(data, status){
							console.log(data)
							console.log(status);
							obj = document.getElementById("content");
							if (status == "success") {
								obj.innerHTML = data;
							} 

						})
					})
				</script>
			</div>
